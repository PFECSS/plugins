{
  "description": "Build base Archlinux",


  "builders": [
    {
      "boot_command": [
        "<enter><wait40>",
        "archinstall<enter><wait25>",
        "26<enter><wait5>",
        "19<enter><wait5>",
        "1<enter><wait5>",
        "<enter><wait5>",
        "0<enter><wait5>",
        "1<enter><wait5>",
        "<enter><wait5>",
        "n<enter><wait5>",
        "arch<enter><wait5>",
        "{{user `ssh_password`}}<enter><wait5>",
        "{{user `ssh_password`}}<enter><wait5>",
        "2<enter><wait5>",
        "7<enter><wait5>",
        "<enter><wait5>",
        "2<enter>wait5>",
        "<enter><wait5>",
        "<enter><wait5>",
        "<enter><wait5>",
        "2<enter><wait5>",
        "0<enter><wait5>",
        "Europe/Paris<enter><wait5>",
        "<enter><wait5>",
        "<enter><wait250>",
        "<enter><wait5>",
        "useradd -m vagrant<enter><wait5>",
        "yes {{user `ssh_password`}} | passwd vagrant<enter><wait5>",
        "exit<enter><wait5>",
        "reboot<enter><wait20>",
        "root<enter><wait5>",
        "{{user `ssh_password`}}<enter><wait5>",
        "pacman -Sy -q --noconfirm<enter><wait5>",
        "pacman -S  -q --noconfirm openssh<enter><wait10>",
        "echo 'PermitRootLogin yes' >> /etc/ssh/sshd_config<enter><wait5>",
        "echo 'PubkeyAuthentication yes' >> /etc/ssh/sshd_config<enter><wait5>",
        "sed -i 's;AuthorizedKeysFile     .ssh/authorized_keys;AuthorizedKeysFile /home/%u/.ssh/authorized_keys;' /etc/ssh/sshd_config<enter><wait5>",
        "systemctl start sshd<enter><wait5>",
        "systemctl enable sshd<enter><wait5>",
        "reboot<enter><wait15>"
      ],
      "boot_wait": "10s",
      "communicator": "ssh",
      "disk_size": "{{user `disk_size`}}",
      "format": "ova",
      "guest_additions_mode": "disable",
      "guest_os_type": "Linux26_64",
      "headless": false,
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_urls": ["{{user `iso_local_url`}}", "{{user `iso_download_url`}}"],
      "keep_registered": "false",
      "shutdown_command": "/sbin/poweroff",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "10m",
      "ssh_username": "root",
      "type": "virtualbox-iso",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
        ["modifyvm", "{{.Name}}", "--rtcuseutc", "on"],
        ["modifyvm", "{{.Name}}", "--graphicscontroller", "vmsvga"],
        ["modifyvm", "{{.Name}}", "--vram", "6"],
        ["modifyvm", "{{.Name}}", "--vrde", "off"]
      ],
      "vm_name": "{{user `vm_name`}}"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "scripts" : [
        "scripts/config.sh",
        "scripts/srv_minecraft.sh"
      ]
    }
  ],



  "post-processors": [
    {
      "output": "output/archlinux.box",
      "type": "vagrant",
      "vagrantfile_template": "data/vagrantfile-archlinux.template"
    }
  ],


  
  "variables": {
    "cpus": "1",
    "disk_size": "5120",
    "iso_checksum": "1f2ecf3eec6013c49224445c469069b269dae47efb8e161bc6334c6611c3a1ec",
    "iso_checksum_type": "sha256",
    "iso_download_url": "https://mirror.archlinux.ikoula.com/iso/2021.10.01/archlinux-2022.01.01-x86_64.iso",
    "iso_local_url": "data/archlinux-2022.01.01-x86_64.iso",
    "memory": "6144",
    "root_password": "vagrant",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "vm_name": "archlinux"
  }
}
