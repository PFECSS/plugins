{
  "description": "Build docker-root",


  "builders": [
    {
      "boot_command": [
        "<enter><wait40>",
        "archinstall<enter><wait15>",
        "26<enter><wait5>",
        "10<enter><wait5>",
        "1<enter><wait5>",
        "1<enter><wait5>",
        "<enter><wait5>",
        "arch<enter><wait>",
        "{{user `ssh_password`}}<enter><wait>",
        "{{user `ssh_password`}}<enter><wait>",
        "vagrant<enter><wait>",
        "{{user `ssh_password`}}<enter><wait>",
        "{{user `ssh_password`}}<enter><wait>",
        "y<enter><wait>",
        "<enter><wait>",
        "<enter><wait>",
        "<enter><wait>",
        "<enter><wait>",
        "0<enter><wait>",
        "<enter><wait>",
        "y<enter><wait>",
        "<enter><wait130>",
        "n<enter><wait>",
        "reboot<enter><wait70>",
        "root<enter><wait>",
        "{{user `ssh_password`}}<enter><wait>",
        "pacman -Sy<enter><wait5>",
        "pacman -S --noconfirm openssh<enter><wait10>",
        "echo 'PermitRootLogin yes' >> /etc/ssh/sshd_config<enter><wait>",
        "echo 'PubkeyAuthentication yes' >> /etc/ssh/sshd_config<enter><wait>",
        "sed -i 's;AuthorizedKeysFile     .ssh/authorized_keys;AuthorizedKeysFile /home/%u/.ssh/authorized_keys;' /etc/ssh/sshd_config<enter><wait>",
        "systemctl start sshd<enter><wait>",
        "systemctl enable sshd<enter><wait>",
        "reboot<enter><wait15>"
      ],
      "boot_wait": "10s",
      "communicator": "ssh",
      "disk_size": "{{user `disk_size`}}",
      "format": "ova",
      "guest_additions_mode": "disable",
      "guest_os_type": "Linux26_64",
      "headless": false,
      "iso_checksum": "{{user `iso_checksum_type`}}:{{user `iso_checksum`}}",
      "iso_urls": ["{{user `iso_local_url`}}", "{{user `iso_download_url`}}"],
      "keep_registered": "false",
      "shutdown_command": "/sbin/poweroff",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "10m",
      "ssh_username": "root",
      "type": "virtualbox-iso",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "{{user `memory`}}"],
        ["modifyvm", "{{.Name}}", "--cpus", "{{user `cpus`}}"],
        ["modifyvm", "{{.Name}}", "--rtcuseutc", "on"],
        ["modifyvm", "{{.Name}}", "--graphicscontroller", "vmsvga"],
        ["modifyvm", "{{.Name}}", "--vram", "6"],
        ["modifyvm", "{{.Name}}", "--vrde", "off"]
      ],
      "vm_name": "{{user `vm_name`}}"
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "scripts" : [
        "scripts/config.sh",
        "scripts/install_packages.sh"
      ]
    }
  ],

  "post-processors": [
    {
      "output": "output/docker-root.box",
      "type": "vagrant",
      "vagrantfile_template": "data/vagrantfile-archlinux.template"
    }
  ],
  
  "variables": {
    "cpus": "1",
    "disk_size": "3072",
    "iso_checksum": "0fd50c3af25f384d141fadd4f0bfc9e90a10b14fce3e85c8ac6c8b74719b9186",
    "iso_checksum_type": "sha256",
    "iso_download_url": "https://mirror.archlinux.ikoula.com/iso/2021.10.01/archlinux-2021.10.01-x86_64.iso",
    "iso_local_url": "data/archlinux-2021.10.01-x86_64.iso",
    "memory": "1024",
    "root_password": "vagrant",
    "ssh_password": "vagrant",
    "ssh_username": "vagrant",
    "vm_name": "docker-root"
  }
}